@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}
 
    <!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- Post preview-->
            <div class="post-preview">
                <a href="post.html">
                    <h2 class="post-title">Posts, posts, posts!</h2>
                    <h3 class="post-subtitle">Read until your eyes bleed, no refunds!</h3>
                </a>
                <p class="post-meta">
                    Posted by
                    <a href="#!">Admin@cms.com</a>
                    on 2 January 2023
                </p>
            </div>
            
            @await Html.PartialAsync("~/Views/Partials/Post.cshtml")

            <!-- Divider-->
            <hr class="my-4" />
            <!-- Pager-->
            <div class="d-flex justify-content-end mb-4">
                <a class="btn btn-primary text-uppercase" href="#!">I don't work →</a>
            </div>
        </div>
    </div>
</div>


